<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
            android:id="@+id/openFirstFragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open first flutter fragment"
            app:layout_constraintBottom_toTopOf="@id/openFragmentButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:id="@+id/openFragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open flutter fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/openAnimationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open animation view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/openFragmentButton"/>

</android.support.constraint.ConstraintLayout>
